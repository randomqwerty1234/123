#include <random>
#include <iostream>

using namespace std;

void changeArray(int counter, int height, int width, int newArr);

int main()
{
    setlocale(0, "");

    random_device rd;
    default_random_engine eng(rd());
    uniform_int_distribution <int> dist(-50, 50);

    int height,width;
    int counter = 0;

    cout << "Введите высоту матрицы : ";
    cin >> height;

    cout << "Введите ширину матрицы : ";
    cin >> width;

    cout << endl;

    int newArr = new int*[height];

    for (int i = 0; i < height; i++) {
        newArr[i] = new int[width];
    }


    for (int i = 0; i < height; i++) {

        for (int j = 0; j < width; j++) {
            newArr[i][j] = dist(eng);
        }
    }

    for (int i = 0; i < height; i++) {

        for (int j = 0; j < width; j++) {
            if (newArr[i][j]<0) {
                counter++;
            }
        }
    }

    changeArray(counter, height, width, newArr);

    for (int i = 0; i < height; i++) {

        for (int j = 0; j < width; j++) {
            cout << newArr[i][j] << "\t";
        }
        cout << endl << endl;
    }



    for (int i = 0; i < height; i++) {
        delete[] newArr[i];
    }

    delete[] newArr;
    cout << endl;
}

void changeArray(int counter, int height , int width , int** newArr) {
    if (counter % 2 == 0) {
        for (int i = 0; i < height; i++) {

            for (int j = 0; j < width; j++) {
                if (newArr[i][j] < 0) {
                    newArr[i][j] = 0;
                }
            }
        }
    }
    else {
        for (int i = 0; i < height; i++) {

            for (int j = 0; j < width; j++) {
                if (newArr[i][j] < 0) {
                    newArr[i][j] = counter;
                }
            }
        }
    }
}
